<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom">

        <RadioGroup
            android:id="@+id/main_tab_bttom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/tab_news"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/ic_tab_news"
                android:gravity="center"
                android:text="首页"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/tab_cheyou"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/ic_tab_cheyou"
                android:gravity="center"
                android:text="选车"
                android:textSize="10sp" />


            <View
                android:id="@+id/placeholder_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></View>

            <RadioButton
                android:id="@+id/tab_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/ic_tab_cheyou"
                android:gravity="center"
                android:text="小视频"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/tab_wode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/ic_tab_cheyou"
                android:gravity="center"
                android:text="爱车"
                android:textSize="10sp" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3" />

            <FrameLayout
                android:id="@+id/service_point_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/service_message_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/skin_d_message_point"
                    android:visibility="gone" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/my_point_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/my_message_point"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/skin_d_message_text_point"
                    android:gravity="center"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:textColor="@color/skin_color_tx_5"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="99+" />
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

    <com.san.os.myview.ui.view.TabVideoButtonPathView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"></com.san.os.myview.ui.view.TabVideoButtonPathView>

</FrameLayout>