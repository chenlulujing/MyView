<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <com.san.os.myview.ui.view.TabView
            android:id="@+id/tabview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.san.os.myview.ui.view.TabView>

        <FrameLayout
            android:id="@+id/search"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/magnifier_select_car_normal" />
        </FrameLayout>

        <View
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/search"
            android:layout_alignBottom="@id/search"
            android:background="@drawable/skin_drawable_gradient_l2r_white"></View>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>
